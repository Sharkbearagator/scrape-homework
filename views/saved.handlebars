<div id="expand-box">
    <div class="wrapper">
        <article class="content">
            <div class="panel">
                <div id="handlebars-sandbox">
                    {{#if article}}
                    {{#each article}}
                    <div class="card mb-3" data-_id="{{this._id}}" id="media">
                        <a href="{{this.url}}">
                            <img src="{{this.picture}}" class="card-img-top" alt="..." id="article-pic">
                            <div class="card-body">
                                <h5 class="card-title">{{this.headline}}</h5>
                        </a>
                        <p class="card-text">{{this.summary}}</p>
                        <p class="card-text"><small class="text-muted">{{this.date}}</small></p>
                        <p> <a href="{{this.url   }}">Read More</a>
                            <span class="buttons">
                                <button id="comment-article" class="small-buttons" data-toggle="modal"
                                    data-target="#modalContactForm">Comments</button> |
                                <button id="delete-article" class="small-buttons">Delete Article</button>
                            </span>
                        </p>

                        <div class="modal fade" id="modalContactForm" tabindex="-1" role="dialog"
                            aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header text-center">
                                        <h4 class="modal-title w-100 font-weight-bold">Leave a comment</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>

                                    <div class="modal-body mx-3">
                                        <div class="modal-body" id="notes">
                                            <span>{{this.noteText}} - {{this.note.date}}</span>
                                        </div>

                                        <div class="md-form">
                                            <i class="fas fa-pencil prefix grey-text"></i>
                                            <textarea type="text" id="form8" class="md-textarea form-control"
                                                rows="4"></textarea>
                                            <label data-error="wrong" data-success="right" for="form8">Your
                                                Comment</label>
                                        </div>

                                    </div>
                                    <div class="modal-footer d-flex justify-content-center">
                                        <button class="btn btn-unique" id="save-comment" data-toggle="modal"
                                            data-target="#modalContactForm">Submit<i
                                                class="fas fa-paper-plane-o ml-1"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                {{/each}}
                {{else}}
                <div class="message"> There are no saved artices, go back to the home page to save some articles!</div>
                {{/if}}
            </div>
        </article>
    </div>
</div>